<mah:MetroWindow
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        x:Class="Thoth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thoth"
        mc:Ignorable="d"
        Title="Login Window" Height="336" Width="473">
    <Grid>

        <Label Content="Username:" Margin="200,21,200,255" Width="70"/>
        <TextBox x:Name="usernameTextbox" Width="300" Margin="83,49,67,195" Height="40"></TextBox>

        <Label Content="Password:"  Margin="200,120,200,157" Width="70"/>
        <TextBox x:Name="passwordTextbox" Width="300" Margin="93,158,77,106" Height="40"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,216,0,0" VerticalAlignment="Top" Width="154" Click="Login_Click" RenderTransformOrigin="0.931,-0.05"/>
        <Button Content="Register User" HorizontalAlignment="Left" Margin="333,247,0,0" VerticalAlignment="Top" Click="RegisterUser_Click"/>
    </Grid>
</mah:MetroWindow>
