<mah:MetroWindow
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"  
        x:Class="Thoth.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thoth"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="337" Width="478">
    <Grid>
        <Label Content="Username" Margin="196,10,210,263"></Label>
        <TextBox x:Name="usernameTextbox" Width="300" Margin="90,41,85,228" Height="35"></TextBox>

        <Label Content="Password"  Margin="197,93,211,185"></Label>
        <TextBox x:Name="passwordTextbox" Width="300" Margin="90,124,85,145" Height="35"/>

        <Label Content="Confirm Password"  Margin="178,176,188,100"/>
        <TextBox x:Name="confirmPasswordTextbox" Width="300" Margin="90,209,85,60" Height="35"/>

        <Button Content="Register User" HorizontalAlignment="Center" Margin="0,267,0,0" VerticalAlignment="Top" Width="154" Click="Register_Click"/>

    </Grid>
</mah:MetroWindow>
